{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@codis/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}